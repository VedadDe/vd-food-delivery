<p>Do sad ste imali <%= narudzbe.length %> narudzbi</p>
<table class="table" style="background: wheat; opacity: 0.7">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Id narudzbe</th>
    <th scope="col">Restoran </th>
    <th scope="col">Jelo </th>
    <th scope="col">Korisnik id</th>
  </tr>
  </thead>
  <tbody>

  <%for (let i=0; i<narudzbe.length; i++) {%>
    <tr>
      <th scope="row">
        <%= i+1 %>
      </th>
      <td><%= narudzbe[i].id%></td>
      <td><%= narudzbe[i].restoran%></td>
      <td><%= narudzbe[i].jelo%></td>

      <td><%= narudzbe[i].kupac%></td>

      <td>
        <form action="/otpremi" method="post">
          <input hidden name="narudzba" value="<%=narudzbe[i].id%>">
          <div>
            <input type="submit" onclick="myFunction()" value="Otpremi" class="btn btn-dark" >
            <script>
              function myFunction() {
                alert("Kurir je pozvan!");
              }
            </script>

          </div>

        </form>


      </td>
    </tr>
  <%}%>
  </tbody>
</table>
