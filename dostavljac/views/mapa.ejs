<div id="map"></div>

<script>
  mapboxgl.accessToken = 'pk.eyJ1IjoidmU5OTkiLCJhIjoiY2tqN25xMmVrMHA1ejJwcnV5ZGg2d29wNSJ9.T3OP28RU4ayDF4v0Qau44Q';
  var map = new mapboxgl.Map({
    container: 'map',
