    center: [<%=korisnik[0].sirina%>, <%=korisnik[0].visina%>],
    zoom: 18
  });

  var marker = new mapboxgl.Marker()
          .setLngLat( [<%=korisnik[0].sirina%>, <%=korisnik[0].visina%>])
