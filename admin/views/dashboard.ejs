      width: 50px;
      background-color: #FFC312;
      color: black;
      border:0 !important;
    }

    input:focus{
      outline: 0 0 0 0  !important;
      box-shadow: 0 0 0 0 !important;

    }

    .remember{
      color: white;
    }

    .remember input
